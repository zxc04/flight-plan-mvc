@model FlightPlan.Application.Domain.Flight

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Flight</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="DepartureAirport" class="control-label"></label>
                <select asp-for="DepartureAirport.Id" class="form-control" asp-items="ViewBag.DepartureAirportId"></select>
                <span asp-validation-for="DepartureAirport.Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ArrivalAirport" class="control-label"></label>
                <select asp-for="ArrivalAirport.Id" class="form-control" asp-items="ViewBag.ArrivalAirportId"></select>
                <span asp-validation-for="ArrivalAirport.Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Plane" class="control-label"></label>
                <select asp-for="Plane.Id" class="form-control" asp-items="ViewBag.PlaneId"></select>
                <span asp-validation-for="Plane.Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
