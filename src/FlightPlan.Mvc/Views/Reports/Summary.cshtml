@model FlightPlan.Application.Reports.SummaryReport

@{
    ViewData["Title"] = "Summary";
}

<h2>Summary</h2>

<div class="row">
    <div class="col-lg-3 col-md-6">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <h1>
                            <i class="glyphicon glyphicon-plane"></i>
                        </h1>
                    </div>
                    <div class="col-xs-9 text-right">
                        <h1>@Html.DisplayFor(model => model.TotalFlights)</h1>
                        <div>@Html.DisplayNameFor(model => model.TotalFlights)</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-3 col-md-6">
        <div class="panel panel-success">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <h1>
                            <i class="glyphicon glyphicon-road"></i>
                        </h1>
                    </div>
                    <div class="col-xs-9 text-right">
                        <h1>@Html.DisplayFor(model => model.TotalDistance) Km</h1>
                        <div>@Html.DisplayNameFor(model => model.TotalDistance)</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-3 col-md-6">
        <div class="panel panel-warning">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <h1>
                            <i class="glyphicon glyphicon-oil"></i>
                        </h1>
                    </div>
                    <div class="col-xs-9 text-right">
                        <h1>@Html.DisplayFor(model => model.TotalFuelConsumption) L</h1>
                        <div>@Html.DisplayNameFor(model => model.TotalFuelConsumption)</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

