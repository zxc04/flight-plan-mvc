@model IEnumerable<FlightPlan.Application.Domain.Plane>

@{
    ViewData["Title"] = "Planes";
}

<h2>Planes</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Model)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FuelConsumptionPer100Km)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TakeoffFuelConsumption)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Model)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FuelConsumptionPer100Km)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TakeoffFuelConsumption)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
